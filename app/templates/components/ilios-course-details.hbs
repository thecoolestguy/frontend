<div class='detail-view'>
    <div class='detail-view-main-title'>
        {{course-header course=course}}
    </div>
    <div class='detail-view-details'>
      {{course-overview course=course}}
      {{#if collapsed}}
        <div {{action 'expand'}} class='detail-collapsed-control'><span>{{t 'courses.expandDetail'}}</span></div>
      {{else}}
        {{course-editing course=course availableTopics=availableTopics programs=programs}}
        <div {{action 'collapse'}} class='detail-collapsed-control'><span class='is-expanded'>{{t 'courses.collapseDetail'}}</span></div>
      {{/if}}
    </div>
</div>
